<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://pizzaItemListView.title"
      focusComponent="pizzaItemsDataGrid">
    <data>
        <collection id="pizzaItemsDc"
                    class="com.company.bpmcourse.entity.PizzaItem">
            <loader id="pizzaItemsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="readButton" action="pizzaItemsDataGrid.readAction"/>
            <button id="refreshButton" action="pizzaItemsDataGrid.refreshAction"/>
            <simplePagination id="pagination" dataLoader="pizzaItemsDl"/>
        </hbox>
        <dataGrid id="pizzaItemsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="pizzaItemsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="readAction" type="list_read"/>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="price"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
