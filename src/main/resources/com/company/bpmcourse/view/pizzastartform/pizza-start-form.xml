<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://pizzaStartForm.title">
    <data>
        <collection id="usersDc" class="com.company.bpmcourse.entity.User">
            <fetchPlan extends="_base"/>
            <loader id="usersDl" readOnly="true">
                <query><![CDATA[select e from User e where e.position = 'developer']]></query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <formLayout>
            <button id="descriptionButton" classNames="rounded-full" themeNames="small" icon="QUESTION_CIRCLE"/>
            <textField datatype="string" id="messageField" label="msg://pizzaStartForm.variable.message"/>
            <entityComboBox id="pizzaEaterField" label="msg://pizzaStartForm.variable.pizzaEater" metaClass="User"
                            itemsContainer="usersDc" required="true">
                <actions>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityComboBox>
        </formLayout>
        <hbox id="actionsPanel">
            <button id="startProcessBtn" icon="CHECK" text="msg://pizzaStartForm.startProcess" themeNames="primary"/>
        </hbox>
    </layout>
</view>